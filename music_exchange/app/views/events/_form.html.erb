<%= semantic_form_for(@event) do |f| %>
  <%= f.inputs do %>
    <%=f.input :event_name, :as => :wrapped_string %>
    <%=f.input :location, :as => :wrapped_string %>
    <%=f.input :start_time, :as => :datetime %> 
    <%=f.input :end_time, :as => :datetime %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>

  <br>
  Suggested Music:<br /><br />
  <% Cd.all.each do |cd| %>
    <!--label for the checkbox-->
    <%= check_box_tag :cd_ids, cd.id, @event.cds.include?(cd), :name => 'event[cd_ids][]'%>
    <%= cd.album_name %> - <%= cd.artist %> <br/>
  <% end %>
  <br>
